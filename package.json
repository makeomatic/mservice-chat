{
  "name": "mservice-chat",
  "description": "mservice-chat",
  "main": "./lib/index.js",
  "scripts": {
    "compile": "rimraf ./lib; babel -d ./lib ./src",
    "doc": "cd schemas && apidoc -i ./../src/actions -v -o ./../docs",
    "docker-release": "./docker-release.sh",
    "lint": "eslint . --ext .json --ext .js",
    "prepublish": "npm run lint && npm run compile",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "start": "node ./bin/mservice.js | bunyan -o short",
    "test": "npm run lint && rimraf ./coverage && ./test/docker.sh",
    "test-dev": "SKIP_REBUILD=1 SKIP_SLEEP=1 ./test/docker.sh"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "boom": "^4.3.0",
    "bunyan": "^1.8.9",
    "common-errors": "^1.0.0",
    "express-cassandra": "^1.7.5",
    "glob": "^7.1.1",
    "hapi": "^16.1.0",
    "is": "^3.2.1",
    "lodash": "^4.17.4",
    "mixwith": "^0.1.1",
    "moment": "^2.18.1",
    "ms-amqp-transport": "^7.1.0",
    "ms-conf": "^3.1.2",
    "ms-flakeless": "^4.0.1",
    "ms-profanity": "^1.0.1",
    "ms-socket.io-adapter-amqp": "^3.0.1",
    "ms-validation": "^3.0.0",
    "mservice": "^6.0.1",
    "socket.io": "^1.7.3",
    "socketio-wildcard": "^0.4.0",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "apidoc": "^0.17.5",
    "apidoc-plugin-schema": "^0.1.1",
    "babel-cli": "^6.24.0",
    "babel-eslint": "^7.2.0",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-strict-mode": "^6.22.0",
    "babel-register": "^6.24.0",
    "chai": "^3.5.0",
    "chance": "^1.0.6",
    "codecov": "^2.1.0",
    "cross-env": "^3.2.4",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^3.18.0",
    "eslint-config-makeomatic": "^1.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-mocha": "^4.9.0",
    "eslint-plugin-promise": "^3.5.0",
    "json": "^9.0.6",
    "latest-version-cli": "^1.1.0",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "request-promise": "^4.2.0",
    "rimraf": "^2.6.1",
    "semantic-release": "^6.3.2",
    "socket.io-client": "^1.7.3"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/makeomatic/mservice-chat.git"
  },
  "release": {
    "verifyConditions": []
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">= 7.6.0",
    "npm": ">= 3.0.0"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.spec.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false,
    "cache": true,
    "reporter": [
      "lcov",
      "json",
      "text-summary"
    ]
  }
}
