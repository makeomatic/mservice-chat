{
  "id": "common.json",
  "definitions": {
    "userId": {
      "type": "string",
      "description": "User identificator"
    },
    "user": {
      "description": "User object",
      "type": "object",
      "required": ["id", "name", "roles"],
      "properties": {
        "id": {
          "$ref": "#/definitions/userId"
        },
        "name": {
          "type": "string",
          "description": "User name"
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Array of user roles"
        }
      }
    },
    "messageId": {
      "description": "`message` identificator",
      "type": "string",
      "pattern": "^\\d+$"
    },
    "roomId": {
      "description": "`room` identificator",
      "type": "string",
      "format": "uuid"
    },
    "message": {
      "description": "`message` object",
      "type": "object",
      "required": ["id", "text", "user"],
      "properties": {
        "id": {
          "$ref": "#/definitions/messageId"
        },
        "text": {
          "type": "string",
          "description": "Message text"
        },
        "user": {
          "$ref": "#/definitions/user"
        }
      }
    },
    "messagesCollection": {
      "additionalProperties": false,
      "type": "object",
      "required": ["meta", "data"],
      "properties": {
        "meta": {
          "description": "Response metadata",
          "type": "object",
          "additionalProperties": false,
          "required": ["count"],
          "properties": {
            "count": {
              "type": "integer",
              "description": "Count of results"
            },
            "before": {
              "$ref": "common.json#/definitions/messageId"
            },
            "last": {
              "$ref": "common.json#/definitions/messageId"
            }
          }
        },
        "data": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/message"
          },
          "description": "Collection of messages"
        }
      }
    },
    "token": {
      "type": "string",
      "description": "Auth token"
    },
    "timestamp": {
      "type": "string",
      "description": "Timestamp"
    },
    "pin": {
      "description": "`pin` object",
      "type": "object",
      "required": ["roomId", "messageId", "message", "pinnedAt", "unpinnedAt"],
      "properties": {
        "roomId": {
          "$ref": "#/definitions/roomId"
        },
        "messageId": {
          "$ref": "#/definitions/messageId"
        },
        "message": {
          "$ref": "#/definitions/message"
        },
        "pinnedAt": {
          "$ref": "#/definitions/timestamp"
        },
        "unpinnedAt": {
          "$ref": "#/definitions/timestamp"
        },
        "pinnedBy": {
          "$ref": "#/definitions/user"
        },
        "unpinnedBy": {
          "$ref": "#/definitions/user"
        }
      }
    }
  }
}
