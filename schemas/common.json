{
  "id": "common.json",
  "definitions": {
    "ban": {
      "description": "`ban` object",
      "type": "object",
      "required": ["attributes", "type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ban"]
        },
        "attributes": {
          "type": "object",
          "required": ["roomId", "userId", "user", "bannedAt", "bannedBy", "reason"],
          "properties": {
            "roomId": {
              "$ref": "#/definitions/roomId"
            },
            "userId": {
              "$ref": "#/definitions/userId"
            },
            "user": {
              "$ref": "#/definitions/user"
            },
            "bannedAt": {
              "$ref": "#/definitions/ISODate"
            },
            "bannedBy": {
              "$ref": "#/definitions/user"
            },
            "reason": {
              "type": "string",
              "description": "Ban reason"
            }
          }
        }
      }
    },
    "banResponse": {
      "additionalProperties": false,
      "description": "`ban` object response",
      "type": "object",
      "required": ["data"],
      "properties": {
        "data": {
          "$ref": "#/definitions/ban"
        }
      }
    },
    "message": {
      "description": "`message` object",
      "type": "object",
      "required": ["id", "type", "attributes"],
      "properties": {
        "id": {
          "$ref": "#/definitions/messageId"
        },
        "type": {
          "type": "string",
          "enum": ["message"]
        },
        "attributes": {
          "additionalProperties": false,
          "description": "Message properties",
          "required": ["text", "user"],
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "description": "Message text"
            },
            "user": {
              "$ref": "#/definitions/user"
            },
            "createdAt": {
              "$ref": "#/definitions/ISODate"
            }
          }
        }
      }
    },
    "messagesCollection": {
      "additionalProperties": false,
      "description": "Messages response",
      "type": "object",
      "required": ["meta", "data"],
      "properties": {
        "meta": {
          "$ref": "#/definitions/collectionMeta"
        },
        "data": {
          "description": "Collection of messages",
          "type": "array",
          "items": {
            "$ref": "#/definitions/message"
          }
        }
      }
    },
    "messageResponse": {
      "additionalProperties": false,
      "description": "`message` object response",
      "type": "object",
      "required": ["data"],
      "properties": {
        "data": {
          "$ref": "#/definitions/message"
        }
      }
    },
    "pin": {
      "description": "`pin` object",
      "type": "object",
      "required": ["attributes", "type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["pin"]
        },
        "attributes": {
          "type": "object",
          "required": ["roomId", "messageId", "message", "pinnedAt", "unpinnedAt"],
          "properties": {
            "roomId": {
              "$ref": "#/definitions/roomId"
            },
            "messageId": {
              "$ref": "#/definitions/messageId"
            },
            "message": {
              "$ref": "#/definitions/message"
            },
            "pinnedAt": {
              "$ref": "#/definitions/ISODate"
            },
            "unpinnedAt": {
              "$ref": "#/definitions/ISODate"
            },
            "pinnedBy": {
              "$ref": "#/definitions/user"
            },
            "unpinnedBy": {
              "$ref": "#/definitions/user"
            }
          }
        }
      }
    },
    "pinsCollection": {
      "additionalProperties": false,
      "description": "Pins response",
      "type": "object",
      "required": ["meta", "data"],
      "properties": {
        "meta": {
          "$ref": "#/definitions/collectionMeta"
        },
        "data": {
          "description": "Collection of pins",
          "type": "array",
          "items": {
            "$ref": "#/definitions/pin"
          }
        }
      }
    },
    "pinResponse": {
      "additionalProperties": false,
      "description": "`pin` object response",
      "type": "object",
      "required": ["data"],
      "properties": {
        "data": {
          "$ref": "#/definitions/pin"
        }
      }
    },
    "user": {
      "description": "User object",
      "type": "object",
      "required": ["id", "type", "attributes"],
      "properties": {
        "id": {
          "$ref": "#/definitions/userId"
        },
        "type": {
          "type": "string",
          "enum": ["user"]
        },
        "attributes": {
          "description": "User properties",
          "type": "object",
          "required": ["name", "roles"],
          "properties": {
            "name": {
              "type": "string",
              "description": "User name"
            },
            "roles": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Array of user roles"
            }
          }
        }
      }
    },
    "userResponse": {
      "additionalProperties": false,
      "description": "`user` object response",
      "type": "object",
      "required": ["data"],
      "properties": {
        "data": {
          "$ref": "#/definitions/user"
        }
      }
    },
    "messageId": {
      "description": "`message` identificator",
      "type": "string",
      "pattern": "^\\d+$"
    },
    "userId": {
      "type": "string",
      "description": "User identificator"
    },
    "roomId": {
      "description": "`room` identificator",
      "type": "string",
      "format": "uuid"
    },
    "collectionMeta": {
      "description": "Collection metadata",
      "type": "object",
      "additionalProperties": false,
      "required": ["count"],
      "properties": {
        "count": {
          "type": "integer",
          "description": "Count of results"
        },
        "before": {
          "$ref": "common.json#/definitions/messageId"
        },
        "last": {
          "$ref": "common.json#/definitions/messageId"
        }
      }
    },
    "successResponse": {
      "description": "Success response",
      "type": "object",
      "additionalProperties": false,
      "required": ["meta"],
      "properties": {
        "meta": {
          "description": "Success metadata",
          "type": "object",
          "additionalProperties": false,
          "required": ["status"],
          "properties": {
            "status": {
              "description": "Response status",
              "type": "string",
              "enum": ["success"]
            }
          }
        }
      }
    },
    "token": {
      "type": "string",
      "description": "Auth token"
    },
    "ISODate": {
      "type": "string",
      "format": "date-time",
      "description": "ISO Date"
    },
    "limit": {
      "description": "Limitation of results",
      "type": "integer",
      "minimum": 1,
      "maximum": 20,
      "default": 20
    }
  }
}
